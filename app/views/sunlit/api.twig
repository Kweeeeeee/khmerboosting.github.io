{% include 'header.twig' %}

      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-header ">
                <div class="servisbilgi">
                <h2 class="m-b-md">API Document</h2>
               <table class="table table-bordered">
                  <tbody>
                     <tr>
                        <td class="width-40">HTTP Method</td>
                        <td>POST</td>
                     </tr>
                     <tr>
                        <td>API URL</td>
                        <td>{{ site["url"] }}/api/v2</td>
                     </tr>
                     {% if user['auth'] %}
                     <tr>
                        <td>API Key</td>
                        <td>{{ user["apikey"] }}</td>
                     </tr>
                     {% endif %}
                     <tr>
                        <td>Return Format</td>
                        <td>JSON</td>
                     </tr>
                  </tbody>
               </table>
               <h4 class="m-t-md"><strong> Service List </strong></h4>
               <table class="table table-bordered">
                  <thead>
                     <tr>
                        <th class="width-40">PARAMETER	</th>
                        <th>EXPLANATION</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                        <td>key</td>
                        <td>User API Key</td>
                     </tr>
                     <tr>
                        <td>action</td>
                        <td>services</td>
                     </tr>
                  </tbody>
               </table>
               <p><strong>Sample return</strong></p>
               <pre style="color:#fff">[
    {
        "service": 1,
        "name": "Followers",
        "type": "Default",
        "category": "First Category",
        "rate": "0.90",
        "min": "50",
        "max": "10000"
    },
    {
        "service": 2,
        "name": "Comments",
        "type": "Custom Comments",
        "category": "Second Category",
        "rate": "8",
        "min": "10",
        "max": "1500"
    }
]</pre>
               <h4 class="m-t-md"><strong> New order </strong></h4>
               <p>
               </p>
               <form class="form-inline">
                  <div class="form-group">
                     <select class="form-control input-sm" id="api_servicetype">
                        <option value="1">Standard</option>
                     </select>
                  </div>
               </form>
               <p></p>
               <div id="add_">
                  <table class="table table-bordered">
                     <thead>
                        <tr>
                           <th class="width-40">PARAMETER</th>
                           <th>EXPLANATION</th>
                        </tr>
                     </thead>
                     <tbody>
                        <tr>
                           <td>key</td>
                           <td>User API Key</td>
                        </tr>
                        <tr>
                           <td>action</td>
                           <td>add</td>
                        </tr>
                        <tr>
                           <td>service</td>
                           <td>Order ID</td>
                        </tr>
                        <tr>
                           <td>link</td>
                           <td>service connectiom</td>
                        </tr>
                        <tr>
                           <td>quantity</td>
                           <td>quantity</td>
                        </tr>
                        <tr>
                           <td>runs</td>
                           <td>Runs to deliver</td>
                        </tr>
                        <tr>
                           <td>interval (optional)</td>
                           <td>Interval in minutes</td>
                        </tr>
                     </tbody>
                  </table>
               </div>
               <p><strong>Sample return</strong></p>
               <pre style="color:#fff">{
    "order": 23501
}</pre>
               <h4 class="m-t-md"><strong> Order status </strong></h4>
               <table class="table table-bordered">
                  <thead>
                     <tr>
                        <th class="width-40">PARAMETER</th>
                        <th>EXPLANATION</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                        <td>key</td>
                        <td>User API Key</td>
                     </tr>
                     <tr>
                        <td>action</td>
                        <td>status</td>
                     </tr>
                     <tr>
                        <td>order</td>
                        <td>order ID</td>
                     </tr>
                  </tbody>
               </table>
               <p><strong>Sample return</strong></p>
               <pre style="color:#fff">{
    "charge": "0.27819",
    "start_count": "3572",
    "status": "Partial",
    "remains": "157",
    "currency": "TRY"
}</pre>
               <h4 class="m-t-md"><strong> User balance </strong></h4>
               <table class="table table-bordered">
                  <thead>
                     <tr>
                        <th class="width-40">Parametre</th>
                        <th>EXPLANATION</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                        <td>key</td>
                        <td>User API Key</td>
                     </tr>
                     <tr>
                        <td>action</td>
                        <td>balance</td>
                     </tr>
                  </tbody>
               </table>
               <p><strong>Sample return</strong></p>
               <pre style="color:#fff">{
    "balance": "100.84292",
    "currency": "TRY"
}</pre>
